<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background: linear-gradient(90deg, #C7C5F4, #776BCC);	
    }
    
    h1 {
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }

    td {
      background-color: #fff;
    }
  </style>
  <title>Orders</title>
</head>
<body>
  <h1>Orders</h1>

  <% if (orders.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Book</th>
          <th>Author</th>
          <th>Price</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.bookname %></td>
            <td><%= order.author %></td>
            <td>$<%= order.price %></td>
            <td><%= order.status %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No orders found for <%= useremail %>.</p>
  <% } %>
</body>
</html>
